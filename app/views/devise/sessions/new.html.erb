<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
       

        <h1 class="page-header text-center"> Control HOME </h1>
        <h2  class=" text-center"><small>Gestão de Condomínios</small></h2>

        <%= form_for resource, as: resource_name, url: session_path(resource_name),
                      html: { class: "form-horizontal center"} do |f| %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "apartamento@apartamento", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <div class="col-sm-10">
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %> Lembre - me
                  </label>
                </div>
              </div>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Entrar", class: "btn btn-success btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
      <br>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>